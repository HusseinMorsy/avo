<% if @actions.count > 0 %>
  <div class="relative z-30" data-controller="toggle-panel">
    <button
      class="<%= button_classes %> focus:outline-none"
      color="blue"
      data-action="click->toggle-panel#togglePanel"
    ><%= svg 'media/svgs/arrow-left.svg', class: 'h-4 mr-1 transform -rotate-90' %> <%= t 'avo.actions' %></button>

    <div
      class="absolute block inset-auto right-0 top-full bg-white min-w-300px mt-2 py-4 z-20 shadow-context rounded-xl overflow-hidden hidden"
      data-toggle-panel-target="panel"
    >
    hey you
      <template v-for="(action, index) in actions">
        <a class="block w-full py-2 px-4 font-bold text-gray-700 hover:text-white hover:bg-blue-500"
          :key="action.id"
          :index="index"
          href="javascript:void(0);"
          v-text="action.name"
          @click="openModal(action)"
        />
      </template>
    </div>
  </div>
<% end %>
